---
import Navbar from "../Navigation/Navbar.astro";
import Home from "../HomeContent/Index.astro";
import Overview from "../OverviewContent/Index.astro";
import ProjectContent from "../ProjectContent/Index.astro";
import ExperienceContent from "../ExperienceContent/Index.astro";
import ContactContent from "../ContactContent/Index.astro";
---

<center>
  <Navbar />
  <div style="max-width: 90%; margin: 0 auto;">
    <div class="vision-content">
      <div class="tabs-animated-wrap">
        <div class="tabs">
          <div id="tab-1" class="page-content tab tab-active">
            <div style="padding:30px 60px;">
              <Home />
            </div>
          </div>
          <div id="tab-2" class="page-content tab">
            <div style="padding:30px 56px;">
              <Overview />
            </div>
          </div>
          <div id="tab-3" class="page-content tab">
            <ProjectContent />
          </div>
          <div id="tab-4" class="page-content tab">
            <div style="padding:30px 56px;">
              <ExperienceContent />
            </div>
          </div>
          <div id="tab-5" class="page-content tab">
            <ContactContent />
          </div>
        </div>
      </div>
    </div>

    <div class="vision-control">
      <div style="padding: 23px 30px;">
        <div class="row" style="text-align: left;">
          <div class="col">
            <a href="#" class="btn-lock">
              <img src="assets/image/icons/home/dots.svg" alt="" />
            </a>
          </div>
          <div class="col">
            <a href="#" class="open-music">
              <img src="assets/image/icons/home/music.svg" alt="" />
            </a>
          </div>
          <div class="col">
            <a
              href="#"
              class="open-gallery"
              style="margin-top: -6px; margin-left: -3px; display: block;"
            >
              <img src="assets/image/icons/home/pict.svg" alt="" />
            </a>
          </div>
          <div class="col">
            <a
              href="#"
              style="display: block; margin-left: 13px; margin-top: 2px"
            >
              <img src="assets/image/icons/home/divider.svg" alt="" />
            </a>
          </div>
          <div class="col" style="margin-top: -1px;">
            <a href="#" class="changeBg bg-1" id="1">
              <img src="assets/image/icons/lockscreen/bg1.svg" alt="" />
            </a>
          </div>
          <div class="col" style="margin-top: -1px;">
            <a href="#" class="changeBg bg-2" id="2">
              <img src="assets/image/icons/lockscreen/bg2.svg" alt="" />
            </a>
          </div>
          <div class="col" style="margin-top: -1px;">
            <a href="#" class="changeBg bg-3" id="3">
              <img src="assets/image/icons/lockscreen/bg3.svg" alt="" />
            </a>
          </div>
          <div class="col" style="margin-top: -1px;">
            <a href="#" class="changeBg bg-4" id="4">
              <img src="assets/image/icons/lockscreen/bg4.svg" alt="" />
            </a>
          </div>
          <div class="col" style="margin-top: -1px;">
            <a href="#" class="changeBg bg-5" id="5">
              <img src="assets/image/icons/lockscreen/bg5.svg" alt="" />
            </a>
          </div>
          <div class="col" style="margin-top: -1px;">
            <a href="#" class="changeBg bg-6" id="6">
              <img src="assets/image/icons/lockscreen/bg6.svg" alt="" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</center>
